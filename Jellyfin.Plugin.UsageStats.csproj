<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
	  <AssemblyVersion>1.7.0.0</AssemblyVersion>
	  <Authors>Bernd Bestel</Authors>
	  <Description>Collect user statistics in a MariaDB database</Description>
	  <Copyright>Bernd Bestel</Copyright>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageProjectUrl>https://github.com/berrnd/Jellyfin.Plugin.UsageStats</PackageProjectUrl>
	  <Version>1.7.0</Version>
	  <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Common" Version="10.10.3" />
    <PackageReference Include="Jellyfin.Data" Version="10.10.3" />
    <PackageReference Include="MySqlConnector" Version="2.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="MediaBrowser.Model">
      <HintPath>..\custom_dependencies\MediaBrowser.Model.dll</HintPath>
      <Private>False</Private>
    </Reference>
	<Reference Include="MediaBrowser.Controller">
      <HintPath>..\custom_dependencies\MediaBrowser.Controller.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

</Project>
